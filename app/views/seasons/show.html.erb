<% content_for :title, "tabela | #{@championship.name}" %>
<% content_for :website, @championship.webSite %>
<% content_for :championship_name, @championship.name %>

<main class="glb-grid grid-24" itemscope="" itemtype="http://schema.org/webpage">
    <div class="row medium-collapse large-uncollapse">
      <div class="column small-24 medium-centered medium-20 large-22 tabela-body">
        <div id="widget-classificacao" class="theme">
          <%
            max_phases = @season.phases.count
            #selecionar current_phase olhando a data
          %>
          <% @season.phases.each_with_index { |phase, index| %>
            <div id="tabela-fases-<%= @season.id %>-<%= index %>" style="<%= "display:none;" if index != 0 %>">
              <nav class="tabela-navegacao tabela-navegacao-fases" data-fase-total="6">
                <span class="gui-icon gui-icon-arrow-left-highlight tabela-navegacao-setas tabela-navegacao-anterior <% if index > 0 %>tabela-navegacao-setas-ativa<% end %>" onclick="abrirFase(this, '<%= @season.id%>-<%= index %>', '<%= @season.id%>-<%= index-1 %>')"></span>
                <span class="tabela-navegacao-seletor tabela-navegacao-seletor-ativo" data-fase="<%= index+1 %>" data-gui-popin=".fases-popin"><%= phase.name %></span>
                <span class="gui-icon gui-icon-arrow-right-highlight tabela-navegacao-setas tabela-navegacao-proximo  <% if index < max_phases - 1 %>tabela-navegacao-setas-ativa<% end %>" onclick="abrirFase(this, '<%= @season.id%>-<%= index %>', '<%= @season.id%>-<%= index+1 %>')"></span>
              </nav>
              <div id="container-para-tabela-simulador-ou-navegacao-js" class="dentro" style="opacity: 1; transition: opacity 0.6s ease 0s;">
                <article class="tabela-classificacao tabela-futebol  pontos-corridos-grupado" itemscope="" itemtype="http://schema.org/SportsEvent">
                  <meta itemprop="name" content="">
                  <meta itemprop="startDate" content="">
                  <meta itemprop="endDate" content="">
                  <% phase.groups.each { |group| %>
                    <section class="section-container">
                      <header><h2 class="gui-text-section-title tabela-header-titulo"><%= group.name %></h2></header>
                      <div class="tabela tabela-com-jogos-por-grupo">
                        <table class="tabela-times">
                          <colgroup>
                            <col class="tabela-times-col-posicao">
                            <col class="tabela-times-col-time">
                            <col class="tabela-times-col-variacao">
                          </colgroup>
                          <thead>
                          <tr class="tabela-head-linha">
                            <th class="tabela-times-head" colspan="3">Classificação</th>
                          </tr>
                          </thead>
                          <tbody>
                          <% group.classificationTable.rows.each { |row| %>
                            <tr class="tabela-body-linha">
                              <td class="tabela-times-posicao" style=""><%= row.position %></td>
                              <td class="tabela-times-time" itemprop="performer" itemscope="" itemtype="http://schema.org/SportsTeam">
                                <a class="tabela-times-time-link" href="" title="<%= row.team.popularName %>" alt="<%= row.team.popularName %>" itemprop="url"><strong class="tabela-times-time-nome" itemprop="name"><%= row.team.popularName %></strong><span class="tabela-times-time-sigla"><%= row.team.abbreviation ? row.team.abbreviation : abbreviate_team_name(row.team.popularName) %></span></a>
                              </td>
                              <td class="tabela-times-variacao">
                                <!-- span>1</span><span class="tabela-icone tabela-icone-positiva"></span-->
                              </td>
                            </tr>
                          <% } %>
                          </tbody>
                        </table>
                        <div class="tabela-scroll overthrow" style="opacity: 1; padding-left: 239px;">
                          <table class="tabela-pontos">
                            <thead>
                            <tr class="tabela-head-linha">
                              <th>P</th>
                              <th>J</th>
                              <th>V</th>
                              <th>E</th>
                              <th>D</th>
                              <th class="tabela-pontos-th-duplo">GP</th>
                              <th class="tabela-pontos-th-duplo">GC</th>
                              <th class="tabela-pontos-th-duplo">SG</th>
                              <th>%</th>
                              <th class="tabela-pontos-th-longo">ÚLT. JOGOS</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% group.classificationTable.rows.each { |row| %>
                              <tr class="tabela-body-linha">
                                <td class="tabela-pontos-ponto"><%= row.points %></td> <td><%= row.numberMatches %></td> <td><%= row.wins %></td> <td><%= row.draws %></td> <td><%= row.losts %></td> <td><%= row.proGoals %></td> <td><%= row.againstGoals %></td> <td><%= row.balanceGoals %></td> <td><%= number_to_percentage(row.percent, precision: 1, format: "%n") %></td>
                                <td class="tabela-pontos-ultimos-jogos">
                                  <% row.matchesHistory.last(5).each { |history| %>
                                    <span class="tabela-icone tabela-icone-circulo tabela-icone-<%= (history == 3) ? "v" : ((history == 1) ? "e" : "d") %> bs-tabela"></span>
                                  <% } %>
                                </td>
                              </tr>
                            <% } %>
                            </tbody>
                          </table>
                        </div>
                      </div>
                      <aside class="lista-de-jogos lista-de-jogos-dentro-grupo">
                        <header><h2 class="gui-text-section-title tabela-header-titulo">JOGOS</h2></header>
                        <%
                          max_round = group.matches.max_by {|x| x.round }.round
                          x = group.matches.sort_by {|m| m.round }.detect{|m| m.matchStatus == "SCHEDULED"}
                          current_round = x ? (x.round != 1 ? x.round-1 : x.round) : max_round
                          #selecionar current_round olhando a data
                        %>
                        <% group.matches.group_by { |m| m.round }.each { |round, matches| %>
                          <div id="tabela-jogos-<%= phase.id %>-<%= group.id %>-<%= round %>" style="<%= "display:none;" if round != current_round %>">
                            <nav class="tabela-navegacao tabela-navegacao-jogos<%= phase.id %>-<%= group.id %>-<%= round %>">
                              <span class="gui-icon gui-icon-arrow-left-highlight tabela-navegacao-setas tabela-navegacao-anterior <% if round > 1 %>tabela-navegacao-setas-ativa<% end %>" onclick="abrirRodada(this, '<%= phase.id%>-<%= group.id %>-<%= round %>', '<%= phase.id%>-<%= group.id %>-<%= round-1 %>')"></span>
                              <span class="tabela-navegacao-seletor" data-rodada="<%= round %>" data-rodadas-length="38"><%= round %>ª RODADA</span>
                              <span class="gui-icon gui-icon-arrow-right-highlight tabela-navegacao-setas tabela-navegacao-proximo <% if round < max_round %>tabela-navegacao-setas-ativa<% end %>" onclick="abrirRodada(this, '<%= phase.id%>-<%= group.id %>-<%= round %>', '<%= phase.id%>-<%= group.id %>-<%= round+1 %>')"></span>
                            </nav>
                            <% matches.sort_by{:date}.each do |match| %>
                              <ul class="lista-de-jogos-conteudo" style="opacity: 1; transition: opacity 0.6s ease 0s;">
                                <li class="lista-de-jogos-item">
                                  <div class="placar-jogo" itemscope="" itemtype="http://schema.org/SportsEvent">
                                    <meta itemprop="name" content="<%= match.homeTeam ? match.homeTeam.popularName : match.homeTeamLabel %> x <%= match.awayTeam ? match.awayTeam.popularName : match.awayTeamLabel %>">
                                    <meta itemprop="startDate" content="2018-06-25">
                                    <!--                              <a class="placar-jogo-link placar-jogo-link-confronto-js theme-color-primary" href="">-->
                                    <div class="placar-jogo-informacoes"><%= l(DateTime.parse(match.matchDate), format: "%a %d/%m/%Y") %> <span class="placar-jogo-informacoes-local"><%= match.locale %></span> <%= DateTime.parse(match.matchDate).strftime("%H:%M") if match.matchDate and (DateTime.parse(match.matchDate).hour != 0 or DateTime.parse(match.matchDate).min != 0 or DateTime.parse(match.matchDate).sec != 0) %></div>
                                    <div class="placar-jogo-equipes">
                                  <span class="placar-jogo-equipes-item placar-jogo-equipes-mandante" itemprop="performer" itemscope="" itemtype="http://schema.org/SportsTeam">
                                    <meta itemprop="name" content="<%= match.homeTeam ? match.homeTeam.popularName : match.homeTeamLabel %>">
                                    <span class="placar-jogo-equipes-sigla" title="<%= match.homeTeam ? match.homeTeam.popularName : match.homeTeamLabel %>"><%= match.homeTeam ? (match.homeTeam.abbreviation ? match.homeTeam.abbreviation : abbreviate_team_name(match.homeTeam.popularName)) : match.homeTeamLabel %></span>
                                    <span class="placar-jogo-equipes-nome"><%= match.homeTeam ? match.homeTeam.popularName : match.homeTeamLabel %></span>
                                    <%= image_tag (match.homeTeam ? (match.homeTeam.symbolImage || "no_image.png") : "no_image.png"), class: "placar-jogo-equipes-escudo-mandante", width:"30", height:"30", title:match.homeTeam ? match.homeTeam.popularName : match.homeTeamLabel, itemprop:"image" %>
                                  </span>
                                      <span class="placar-jogo-equipes-item placar-jogo-equipes-placar">
                                    <span class="placar-jogo-equipes-placar-mandante"><% if match.matchStatus != "SCHEDULED"%><%= match.homeScore %><% end %></span>
                                    <span class="tabela-icone tabela-icone-versus"></span>
                                    <span class="placar-jogo-equipes-placar-visitante"><% if match.matchStatus != "SCHEDULED"%><%= match.awayScore %><% end %></span>
                                  </span>
                                      <span class="placar-jogo-equipes-item placar-jogo-equipes-visitante" itemprop="performer" itemscope="" itemtype="http://schema.org/SportsTeam">
                                    <meta itemprop="name" content="<%= match.awayTeam ? match.awayTeam.popularName : match.awayTeamLabel %>">
                                        <%= image_tag (match.awayTeam ? (match.awayTeam.symbolImage || "no_image.png") : "no_image.png"), class: "placar-jogo-equipes-escudo-visitante", width:"30", height:"30", title:match.awayTeam ? match.awayTeam.popularName : match.awayTeamLabel, itemprop:"image" %>
                                        <span class="placar-jogo-equipes-sigla" title="<%= match.awayTeam ? match.awayTeam.popularName : match.awayTeamLabel %>"><%= match.awayTeam ? (match.awayTeam.abbreviation ? match.awayTeam.abbreviation : abbreviate_team_name(match.awayTeam.popularName)) : match.awayTeamLabel %></span>
                                    <span class="placar-jogo-equipes-nome"><%= match.awayTeam ? match.awayTeam.popularName : match.awayTeamLabel %></span>
                                  </span>
                                    </div>
                                    <!-- p class="placar-jogo-complemento">veja como foi</p-->
                                    <!--                              </a>-->
                                  </div>
                                </li>
                              </ul>
                            <% end %>
                          </div>
                        <% } %>
                      </aside>
                    </section>
                  <% } %>
                  <footer class="legenda-classificacao">
                    <div class="legenda-grupos">
                      <div class="legenda-grupo">
                        <span class="legenda-label"><span class="tabela-icone" style="background-color:#0000ff;"></span> Classificados</span>
                      </div>
                      <div class="legenda-grupo">
                        <span class="legenda-label"><span class="tabela-icone tabela-icone-positiva"></span> subiu</span><span class="legenda-label"><span class="tabela-icone tabela-icone-negativa"></span> caiu</span><span class="legenda-label"><span class="tabela-icone tabela-icone-e"></span> manteve</span>
                      </div>
                      <div class="legenda-grupo">
                        <span class="legenda-label"><span class="tabela-icone tabela-icone-circulo tabela-icone-v"></span> vitoria</span><span class="legenda-label"><span class="tabela-icone tabela-icone-circulo tabela-icone-e"></span> empate</span><span class="legenda-label"><span class="tabela-icone tabela-icone-circulo tabela-icone-d"></span> derrota</span>
                      </div>
                    </div>
                    <div class="disclaimer"></div>
                  </footer>
                </article>
              </div>
            </div>
          <% } %>
          <%= render :partial => 'artilharia_temporada' %>
        </div>
      </div>
    </div>
    <%= render :partial => 'noticias_temporada' %>
  </main>