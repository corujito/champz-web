<% content_for :title, "tabela | #{@championship.name}" %>
<div class="glb-grid">
  <div id="glb-topo" class="glb-topo">
    <header id="header-produto" class="header-navegacao header- header-editoria " data-analytics="T">
      <div class="header-principal header-navegacao-color">
        <div class="grid-12 header-navegacao-container row">
          <div class="area-principal column">
            <h1 class="header-title">
              <div class="header-title-content">
                <a class="header-editoria--link" href="<%= @championship.webSite %>"><%= @championship.name %></a>
              </div>
            </h1>
          </div>
        </div>
      </div>
    </header>
  </div>
  <main class="glb-grid grid-24" itemscope="" itemtype="http://schema.org/webpage">
    <div class="row medium-collapse large-uncollapse">
      <div class="column small-24 medium-centered medium-20 large-22 tabela-body">
        <div id="widget-classificacao" class="theme">
          <% @phase.groups.each { |group| %>
            <div id="container-para-tabela-simulador-ou-navegacao-js" class="">
              <article class="tabela-classificacao tabela-futebol pontos-corridos" itemscope="" itemtype="http://schema.org/SportsEvent">
                <meta itemprop="name" content="<%= "#{@championship.name} #{@season.title}" %>">
                <meta itemprop="startDate" content="2018-04-14">
                <meta itemprop="endDate" content="2018-12-02">
                <section class="section-container ">
                  <header>
                    <h2 class="gui-text-section-title tabela-header-titulo"><%= group.name %></h2>
                  </header>
                  <div class="tabela tabela-pontos-corridos">
                    <table class="tabela-times">
                      <colgroup>
                        <col class="tabela-times-col-posicao">
                        <col class="tabela-times-col-time">
                        <col class="tabela-times-col-variacao">
                      </colgroup>
                      <thead>
                      <tr class="tabela-head-linha">
                        <th class="tabela-times-head" colspan="3">Classificação</th>
                      </tr>
                      </thead>
                      <% group.classificationTable.rows.each { |row| %>
                        <tbody>
                        <tr class="tabela-body-linha">
                          <td class="tabela-times-posicao"><%= row.position %></td>
                          <td class="tabela-times-time" itemprop="performer" itemscope="" itemtype="http://schema.org/SportsTeam">
                            <strong class="tabela-times-time-nome" itemprop="name"><%= row.team.popularName %></strong>
                            <span class="tabela-times-time-sigla"><%= row.team.abbreviation %></span>
                          </td>
                          <td class="tabela-times-variacao">
                            <span>0</span>
                            <span class="tabela-icone tabela-icone-neutra"></span>
                          </td>
                        </tr>
                        </tbody>
                      <% } %>
                    </table>
                    <div class="tabela-scroll overthrow" style="opacity: 1; padding-left: 250px;">
                      <table class="tabela-pontos">
                        <thead>
                        <tr class="tabela-head-linha">
                          <th>P</th> <th>J</th> <th>V</th> <th>E</th> <th>D</th> <th class="tabela-pontos-th-duplo">GP</th> <th class="tabela-pontos-th-duplo">GC</th> <th class="tabela-pontos-th-duplo">SG</th> <th>%</th> <th class="tabela-pontos-th-longo">ÚLT. JOGOS</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% group.classificationTable.rows.each { |row| %>
                          <tr class="tabela-body-linha">
                            <td class="tabela-pontos-ponto"><%= row.points %></td> <td><%= row.numberMatches %></td> <td><%= row.wins %></td> <td><%= row.draws %></td> <td><%= row.losts %></td> <td><%= row.proGoals %></td> <td><%= row.againstGoals %></td> <td><%= row.balanceGoals %></td> <td><%= row.percent %></td>
                            <td class="tabela-pontos-ultimos-jogos">
                              <% row.matchesHistory.each { |history| %>
                                <span class="tabela-icone tabela-icone-circulo tabela-icone-<%= (history == 3) ? "v" : ((history == 1) ? "e" : "d") %> bs-tabela"></span>
                              <% } %>
                            </td>
                          </tr>
                        <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </section>
                <footer class="legenda-classificacao">
                  <div class="legenda-grupos">
                    <div class="legenda-grupo">
                      <span class="legenda-label"><span class="tabela-icone" style="background-color:#0000ff;"></span> Libertadores </span>
                      <span class="legenda-label"> <span class="tabela-icone" style="background-color:#008000;"></span> Sul-Americana </span>
                      <span class="legenda-label"> <span class="tabela-icone" style="background-color:#ff0000;"></span> Rebaixados </span>
                      <span class="legenda-label"> <span class="tabela-icone" style="background-color:#00ffff;"></span> Pré-Libertadores </span>
                    </div>
                    <div class="legenda-grupo">
                      <span class="legenda-label"> <span class="tabela-icone tabela-icone-positiva"></span> subiu </span>
                      <span class="legenda-label"> <span class="tabela-icone tabela-icone-negativa"></span> caiu </span>
                      <span class="legenda-label"> <span class="tabela-icone tabela-icone-e"></span> manteve </span>
                    </div>
                    <div class="legenda-grupo">
                      <span class="legenda-label"> <span class="tabela-icone tabela-icone-circulo tabela-icone-v"></span> vitoria </span>
                      <span class="legenda-label"> <span class="tabela-icone tabela-icone-circulo tabela-icone-e"></span> empate </span>
                      <span class="legenda-label"> <span class="tabela-icone tabela-icone-circulo tabela-icone-d"></span> derrota </span>
                    </div>
                  </div>
                  <span id="ver-regulamento-js" class="legenda-regulamento">ver regulamento</span>
                  <div class="disclaimer"> </div>
                  <div class="regulamento-texto-js"> As 20 equipes se enfrentam em turno e returno e, ao fim das 38 rodadas, o time com o maior número de pontos fica com o título brasileiro, enquanto os quatro últimos são rebaixados para a Série B. Em caso de igualdade na pontuação, são critérios de desempate: 1) mais vitórias, 2) melhor saldo de gols, 3) mais gols pró, 4) confronto direto, 5) menos cartões vermelhos, 6) menos cartões amarelos, 7) sorteio. Os quatro primeiros entram na fase de grupos da Libertadores 2018, enquanto o quinto e o sexto colocados disputam a Pré-Libertadores. Caso o campeão da Libertadores e/ou o campeão da Copa do Brasil e/ou o campeão da Sul-Americana estejam no G-6, a equipe seguinte garante vaga na competição continental. </div>
                </footer>
                <aside class="lista-de-jogos lista-de-jogos-fora-grupo" data-url-pattern-navegador-jogos="/servico/backstage/esportes_campeonato/esporte/futebol/modalidade/futebol_de_campo/categoria/profissional/campeonato/campeonato-brasileiro/edicao/campeonato-brasileiro-2018/fases/fase-unica-seriea-2018/rodada/">
                  <header>
                    <h2 class="gui-text-section-title tabela-header-titulo">JOGOS</h2>
                  </header>
                  <% max_round = group.matches.max_by {|x| x.round }.round %>
                  <% group.matches.group_by { |m| m.round }.each { |round, matches| %>
                    <div id="tabela-jogos-<%= @phase.id %>-<%= group.id %>-<%= round %>" style="<%= "display:none;" if round != 1 %>">
                      <nav class="tabela-navegacao tabela-navegacao-jogos<%= @phase.id %>-<%= group.id %>-<%= round %>">
                        <span class="gui-icon gui-icon-arrow-left-highlight tabela-navegacao-setas tabela-navegacao-anterior <% if round > 1 %>tabela-navegacao-setas-ativa<% end %>" onclick="abrirRodada(this, '<%= @phase.id%>-<%= group.id %>-<%= round %>', '<%= @phase.id%>-<%= group.id %>-<%= round-1 %>')"></span>
                        <span class="tabela-navegacao-seletor" data-rodada="<%= round %>" data-rodadas-length="38"><%= round %>ª RODADA</span>
                        <span class="gui-icon gui-icon-arrow-right-highlight tabela-navegacao-setas tabela-navegacao-proximo <% if round < max_round %>tabela-navegacao-setas-ativa<% end %>" onclick="abrirRodada(this, '<%= @phase.id%>-<%= group.id %>-<%= round %>', '<%= @phase.id%>-<%= group.id %>-<%= round+1 %>')"></span>
                      </nav>
                      <% matches.sort_by{:date}.each do |match| %>
                        <ul class="lista-de-jogos-conteudo jogos" style="opacity: 1; transition: opacity 0.6s;">
                          <li class="lista-de-jogos-item">
                            <div class="placar-jogo" itemscope="" itemtype="http://schema.org/SportsEvent">
                              <meta itemprop="name" content="<%= match.homeTeam.popularName %> x <%= match.awayTeam.popularName %>">
                              <meta itemprop="startDate" content="2018-07-25">
<!--                              <a class="placar-jogo-link placar-jogo-link-confronto-js theme-color-primary" href="">-->
                                <div class="placar-jogo-informacoes"><%= l(DateTime.parse(match.matchDate), format: "%a %d/%m/%Y") %> <span class="placar-jogo-informacoes-local"><%= match.locale %></span> <%= DateTime.parse(match.matchDate).strftime("%H:%M") if match.matchDate and (DateTime.parse(match.matchDate).hour != 0 or DateTime.parse(match.matchDate).min != 0 or DateTime.parse(match.matchDate).sec != 0) %></div>
                                <div class="placar-jogo-equipes">
															<span class="placar-jogo-equipes-item placar-jogo-equipes-mandante" itemprop="performer" itemscope="" itemtype="http://schema.org/SportsTeam">
																<meta itemprop="name" content="<%= match.homeTeam.popularName %>">
																<span class="placar-jogo-equipes-sigla" title="<%= match.homeTeam.popularName %>"><%= match.homeTeam.abbreviation %></span>
																<span class="placar-jogo-equipes-nome"><%= match.homeTeam.popularName %></span>
                                <%= image_tag match.homeTeam.symbolImage, class: "placar-jogo-equipes-escudo-mandante", width:"30", height:"30", title:match.homeTeam.popularName, itemprop:"image" %>
															</span>
                                  <span class="placar-jogo-equipes-item placar-jogo-equipes-placar">
																<span class="placar-jogo-equipes-placar-mandante"><% if match.matchStatus != "SCHEDULED"%><%= match.homeScore %><% end %></span>
																<span class="tabela-icone tabela-icone-versus"></span>
																<span class="placar-jogo-equipes-placar-visitante"><% if match.matchStatus != "SCHEDULED"%><%= match.awayScore %><% end %></span>
															</span>
                                  <span class="placar-jogo-equipes-item placar-jogo-equipes-visitante" itemprop="performer" itemscope="" itemtype="http://schema.org/SportsTeam"><meta itemprop="name" content="<%= match.awayTeam.popularName %>">
                                    <%= image_tag match.awayTeam.symbolImage, class: "placar-jogo-equipes-escudo-visitante", width:"30", height:"30", title:match.awayTeam.popularName, itemprop:"image" %>
                                    <span class="placar-jogo-equipes-sigla" title="<%= match.awayTeam.popularName %>"><%= match.awayTeam.abbreviation %></span>
																<span class="placar-jogo-equipes-nome"><%= match.awayTeam.popularName %></span>
															</span>
                                </div>
<!--                              </a>-->
                            </div>
                          </li>
                        </ul>
                      <% end %>
                    </div>
                  <% } %>
                </aside>
              </article>
            </div>
          <% } %>
