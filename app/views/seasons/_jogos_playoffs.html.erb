<div id="container-para-tabela-simulador-ou-navegacao-js" class="dentro" style="opacity: 1; transition: opacity 0.6s ease 0s;">
  <article class="tabela-classificacao">
    <header>
      <h2 class="gui-text-section-title tabela-header-titulo">CONFRONTOS</h2>
    </header>

    <section class="mata-mata-conteudo" itemscope="" itemtype="http://schema.org/SportsEvent">
      <meta itemprop="name" content="">
      <meta itemprop="startDate" content="">
      <meta itemprop="endDate" content="">

      <% phase.groups.each_slice(2) { |groups_matches| %>
        <%
          group1 = groups_matches[0]
          group2 = groups_matches[1]
          chave_de_1_jogo = (group1.matches.count == 1)
        %>
        <div class="chave-jogo-espacador chave-jogo-com-chave-posterior">
          <% if groups_matches.count == 2 and @season.phases.count != phase.order %>
            <div class="chave-jogo-conector-posterior chave-jogo-conector-posterior-duplo <% if chave_de_1_jogo then %>chave-1-jogo-conector-posterior-duplo<% else %>chave-2-jogo-conector-posterior-duplo<% end %>">
              <div class="chave-jogo-conector-linha"></div>
            </div>
          <% end %>

          <% matches = group1.matches.sort_by { |m| m.round } %>
          <% if matches.count == 1 %>
            <%= render :partial => 'chave_mata_mata_1_jogo', locals: {match: matches.first, group: group1} %>
          <% else %>
            <%= render :partial => 'chave_mata_mata_2_jogos', locals: {matches: matches, group: group1} %>
          <% end %>

          <% if group2 %>
            <% matches = group2.matches.sort_by { |m| m.round } %>
            <% if matches.count == 1 %>
              <%= render :partial => 'chave_mata_mata_1_jogo', locals: {match: matches.first, group: group2} %>
            <% else %>
              <%= render :partial => 'chave_mata_mata_2_jogos', locals: {matches: matches, group: group2} %>
            <% end %>
          <% end %>
        </div>
      <% } %>

    </section>
  </article>
</div>